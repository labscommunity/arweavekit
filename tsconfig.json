{
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": true,
    "target": "ES2015",
    "module": "ES2020",
    "outDir": "dist/esm",
    "strict": true,
    "lib": [
      "es2015",
      "DOM"
    ],
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "__tests__/*",
    "src/index.ts"
  ]
}